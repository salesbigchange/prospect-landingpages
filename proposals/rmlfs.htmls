            const donutEngineer = document.getElementById('donut-engineer');
            const donutOffice = document.getElementById('donut-office');
            const donutFuel = document.getElementById('donut-fuel');
            
            function updateCalculator() {
                const numEngineers = parseInt(engineersInput.value);
                const numJobs = parseInt(jobsPerDayInput.value);
                const numOffice = parseInt(officeStaffInput.value);
                const salaryOffice = parseInt(officeSalaryInput.value);
                
                // Update UI values
                engineersValue.textContent = numEngineers;
                jobsPerDayValue.textContent = numJobs;
                officeStaffValue.textContent = numOffice;
                officeSalaryValue.textContent = `£${salaryOffice.toLocaleString()}`;
                
                // Assumptions
                const engineerHourlyRate = 35; // Assumed hourly cost to business
                const productivityGain = 0.15; // 15% gain
                const workingDays = 252; // Approx working days per year
                const fuelCostPerYear = 4000; // Avg fuel spend per van
                const fuelSavingsPct = 0.12; // 12% saving
                const officeEfficiency = 0.20; // 20% admin reduction
                
                // Calculations
                // Engineer: 15% of their day saved * hourly rate * days * num engineers
                // Assuming 8 hour day, 15% is 1.2 hours.
                const dailyEngineerSaving = (8 * productivityGain) * engineerHourlyRate; 
                const annualEngineerSaving = dailyEngineerSaving * workingDays * numEngineers;
                
                // Office: 20% of salary * num staff
                const annualOfficeSaving = (salaryOffice * officeEfficiency) * numOffice;
                
                // Fuel: Spend * saving % * num engineers (assuming 1 van per engineer)
                const annualFuelSaving = (fuelCostPerYear * fuelSavingsPct) * numEngineers;
                
                const totalAnnualSaving = annualEngineerSaving + annualOfficeSaving + annualFuelSaving;
                
                // Update Text Displays
                totalSavingsDisplay.textContent = `£${Math.round(totalAnnualSaving).toLocaleString()}`;
                engineerSavingsDisplay.textContent = `£${Math.round(annualEngineerSaving).toLocaleString()}`;
                officeSavingsDisplay.textContent = `£${Math.round(annualOfficeSaving).toLocaleString()}`;
                fuelSavingsDisplay.textContent = `£${Math.round(annualFuelSaving).toLocaleString()}`;
                
                // Update Details Text
                engineerDetails.textContent = `${numEngineers} engineers x 15% productivity gain (approx 1.2hrs/day) @ £${engineerHourlyRate}/hr x ${workingDays} working days.`;
                officeDetails.textContent = `${numOffice} staff x 20% admin time reduction @ avg salary £${salaryOffice.toLocaleString()}.`;
                fuelDetails.textContent = `${numEngineers} vehicles x 12% fuel reduction (based on approx £${fuelCostPerYear} annual spend).`;
                
                // Update Chart Segments (based on percentage of total saving)
                const total = totalAnnualSaving;
                const engPct = annualEngineerSaving / total;
                const offPct = annualOfficeSaving / total;
                const fuelPct = annualFuelSaving / total;
                
                // Circumference of circle r=40 is 2 * pi * 40 = 251.2
                const circumference = 251.2;
                
                // Engineer Segment (Blue) starts at 0
                const engDash = engPct * circumference;
                donutEngineer.style.strokeDasharray = `${engDash} ${circumference}`;
                
                // Office Segment (Green) starts after Engineer
                const offDash = offPct * circumference;
                donutOffice.style.strokeDasharray = `${offDash} ${circumference}`;
                donutOffice.style.strokeDashoffset = -engDash;
                
                // Fuel Segment (Orange) starts after Office
                const fuelDash = fuelPct * circumference;
                donutFuel.style.strokeDasharray = `${fuelDash} ${circumference}`;
                donutFuel.style.strokeDashoffset = -(engDash + offDash);
            }
            
            // Event Listeners
            engineersInput.addEventListener('input', updateCalculator);
            jobsPerDayInput.addEventListener('input', updateCalculator);
            officeStaffInput.addEventListener('input', updateCalculator);
            officeSalaryInput.addEventListener('input', updateCalculator);
            
            // Initial Calculation
            updateCalculator();
        });
    </script>
</body>
</html>
